<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>nando-automation-demo</description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.3.5">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://github.com/stelligent/nando_automation_demo</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions/>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.SCMTrigger>
      <spec>* * * * *</spec>
      <ignorePostCommitHooks>false</ignorePostCommitHooks>
    </hudson.triggers.SCMTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.plugins.python.Python plugin="python@1.2">
      <command>import os
from instagram.client import InstagramAPI

api = InstagramAPI(client_id=&apos;4d456b2f3f27436ab95f8a476171d739&apos;)
popular_media = api.media_popular(count=1)
os.system(&apos;wget -O image1.jpg %s&apos; % (popular_media[0].images[&apos;thumbnail&apos;].url) )
popular_media = api.media_popular(count=1)
os.system(&apos;wget -O image2.jpg %s&apos; % (popular_media[0].images[&apos;thumbnail&apos;].url) )
</command>
    </hudson.plugins.python.Python>
    <hudson.tasks.Shell>
      <command>sshcmd=&quot;ssh -tt -i /var/lib/jenkins/nando-demo.pem -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -o LogLevel=quiet&quot;
scpcmd=&quot;scp -i /var/lib/jenkins/nando-demo.pem -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -o LogLevel=quiet&quot;

site=&quot;$(date) &lt;br&gt; &lt;table border=0 width=100%&gt; &lt;tr&gt;&quot;

placeImage1=$[ 1 + $[ RANDOM % 19 ]]
placeImage2=$[ 1 + $[ RANDOM % 19 ]]

for placeHolder in {0..19}; do 
	if (( $placeHolder % 5 == 0 )); then site=&quot;$site &lt;/tr&gt;&lt;tr&gt;&quot;; fi
	if [ $placeHolder -eq $placeImage1 ]; then site=&quot;$site &lt;td width=20% align=center&gt;&lt;img src=image1.jpg&gt;&lt;/td&gt;&quot;
    elif [ $placeHolder -eq $placeImage2 ]; then site=&quot;$site &lt;td width=20% align=center&gt;&lt;img src=image2.jpg&gt;&lt;/td&gt;&quot;
	else 
    	site=&quot;$site &lt;td width=20% align=center&gt;&quot;
    	for tddata in {0..8}; do
        	site=&quot;$site $(cat /dev/urandom|tr -dc 0-1|head -c8) $(cat /dev/urandom|tr -dc 0-1|head -c8) &lt;br&gt;&quot;
        done
        site=&quot;$site $(cat /dev/urandom|tr -dc 0-1|head -c8) $(cat /dev/urandom|tr -dc 0-1|head -c8) &lt;/td&gt;&quot;
    fi
done

site=&quot;$site &lt;/tr&gt;&lt;/table&gt;&quot;

if [ -f hosts ]; then rm -fv hosts; fi
wget http://nando-automation-demo.s3.amazonaws.com/hosts

for ip in $(cat hosts); do 
	$sshcmd ec2-user@$ip &quot;echo \&quot;$site\&quot; | sudo tee /var/www/html/index.html&quot;
    $scpcmd image1.jpg ec2-user@$ip:
    $sshcmd ec2-user@$ip &quot;sudo mv -v /home/ec2-user/image1.jpg /var/www/html&quot;
    $scpcmd image2.jpg ec2-user@$ip:
    $sshcmd ec2-user@$ip &quot;sudo mv -v /home/ec2-user/image2.jpg /var/www/html&quot;
done</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>
